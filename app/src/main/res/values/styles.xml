<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="previousNextTextViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="AuthFormFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/colorGrayBackground</item>
    </style>

    <style name="AuthButtons" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/auth_button_background</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/auth_elements_width</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BorderLessTextButton">
        <item name="android:textSize">@dimen/borderless_text_button_text_size</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="Adaptive.BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/borderless_button_text_color</item>
    </style>
    <style name="PlaceholderTextViewStyle">
        <item name="android:textSize">@dimen/text_size_placeholders</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/stepic_weak_text</item>
    </style>
    <style name="PlaceholderButton">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/placeholder_button_background_selector</item>
        <item name="android:foreground">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/new_accent_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/guideline_standard_padding</item>
    </style>
    <style name="Adaptive" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/new_primary_color</item>
        <item name="colorPrimaryDark">@color/new_accent_color</item>
        <item name="colorAccent">@color/new_accent_color</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Adaptive.ReactionStamp">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">Roboto-Regular.ttf</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.NoActionBar.EmptyAuth" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_empty_auth</item>
    </style>
</resources>